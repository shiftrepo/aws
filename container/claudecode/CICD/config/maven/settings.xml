<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- Local repository location -->
    <localRepository>/root/.m2/repository</localRepository>

    <!-- Server credentials for Nexus -->
    <servers>
        <server>
            <id>nexus-releases</id>
            <username>admin</username>
            <password>Degital2026!</password>
        </server>
        <server>
            <id>nexus-snapshots</id>
            <username>admin</username>
            <password>Degital2026!</password>
        </server>
    </servers>

    <!-- Mirrors to route all Maven requests through Nexus -->
    <mirrors>
        <mirror>
            <id>nexus-mirror</id>
            <mirrorOf>*</mirrorOf>
            <url>http://44.211.203.31:8082/repository/maven-public/</url>
        </mirror>
    </mirrors>

    <!-- Profiles for Nexus repositories -->
    <profiles>
        <profile>
            <id>nexus</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>http://44.211.203.31:8082/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://44.211.203.31:8082/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <!-- Activate the nexus profile by default -->
    <activeProfiles>
        <activeProfile>nexus</activeProfile>
    </activeProfiles>
</settings>
