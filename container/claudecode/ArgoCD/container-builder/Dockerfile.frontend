# syntax=docker/dockerfile:1

# =============================================================================
# Stage 1: Downloader - Fetch frontend tarball from Nexus NPM repository
# =============================================================================
FROM curlimages/curl:latest AS downloader

# Build arguments for Nexus repository configuration
ARG NEXUS_URL=http://localhost:8081
ARG PACKAGE_NAME=@orgmgmt/frontend
ARG VERSION=1.0.0
ARG REPOSITORY=npm-hosted

USER root
WORKDIR /download

# Download and extract frontend tarball from Nexus NPM repository
# NPM packages are stored as tarballs in Nexus
RUN set -ex && \
    # Convert scoped package name if needed (@org/pkg -> @org%2Fpkg)
    ENCODED_PACKAGE=$(echo "${PACKAGE_NAME}" | sed 's|/|%2F|g') && \
    # Download package metadata to get tarball URL
    echo "Fetching package: ${PACKAGE_NAME}@${VERSION}" && \
    TARBALL_URL="${NEXUS_URL}/repository/${REPOSITORY}/${ENCODED_PACKAGE}/-/frontend-${VERSION}.tgz" && \
    echo "Downloading from: ${TARBALL_URL}" && \
    curl -fsSL "${TARBALL_URL}" -o frontend.tgz && \
    # Verify tarball
    ls -lh frontend.tgz && \
    file frontend.tgz && \
    # Extract tarball (npm packages have 'package' directory inside)
    tar -xzf frontend.tgz && \
    # Move dist files to root for easier copying
    if [ -d package/dist ]; then \
        mv package/dist /download/dist; \
    elif [ -d package/build ]; then \
        mv package/build /download/dist; \
    else \
        mv package /download/dist; \
    fi && \
    ls -la /download/dist

# =============================================================================
# Stage 2: Runtime - Nginx web server for serving static files
# =============================================================================
FROM nginx:1.25-alpine

# Metadata labels for tracking and documentation
LABEL org.opencontainers.image.title="OrgMgmt Frontend" \
      org.opencontainers.image.description="Employee organization management frontend application" \
      org.opencontainers.image.vendor="Example Corp" \
      org.opencontainers.image.authors="devops@example.com" \
      org.opencontainers.image.url="https://github.com/example/orgmgmt" \
      org.opencontainers.image.documentation="https://github.com/example/orgmgmt/docs" \
      org.opencontainers.image.source="https://github.com/example/orgmgmt" \
      org.opencontainers.image.version="${VERSION:-1.0.0}" \
      org.opencontainers.image.licenses="Apache-2.0"

# Install wget for healthcheck
RUN apk add --no-cache wget && \
    rm -rf /var/cache/apk/*

# Remove default nginx configuration and static files
RUN rm -rf /usr/share/nginx/html/* && \
    rm -f /etc/nginx/conf.d/default.conf

# Copy custom nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy frontend dist files from downloader stage
COPY --from=downloader /download/dist /usr/share/nginx/html

# Ensure proper permissions
RUN chown -R nginx:nginx /usr/share/nginx/html && \
    chmod -R 755 /usr/share/nginx/html

# Expose HTTP port
EXPOSE 80

# Healthcheck to ensure nginx is serving content
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost/ || exit 1

# Run nginx in foreground
CMD ["nginx", "-g", "daemon off;"]
