# PostgreSQL Configuration
# Database version and connection settings
POSTGRES_VERSION=16-alpine
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=orgmgmt
POSTGRES_USER=orgmgmt_user
POSTGRES_PASSWORD=ChangeMe123!  # CHANGE THIS IN PRODUCTION!

# pgAdmin Configuration
# Web interface for PostgreSQL management
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@orgmgmt.local
PGADMIN_DEFAULT_PASSWORD=ChangeMe123!  # CHANGE THIS IN PRODUCTION!

# Nexus Repository Configuration
# Artifact repository and Docker registry
NEXUS_VERSION=3.63.0
NEXUS_HTTP_PORT=8081
NEXUS_DOCKER_PORT=8082
NEXUS_ADMIN_PASSWORD=ChangeMe123!  # CHANGE THIS IN PRODUCTION!

# GitLab Configuration
# Source control and CI/CD platform
GITLAB_VERSION=latest
GITLAB_RUNNER_VERSION=latest
GITLAB_HTTP_PORT=5003
GITLAB_REGISTRY_PORT=5005
GITLAB_SSH_PORT=2222
GITLAB_ROOT_PASSWORD=ChangeMe123!  # CHANGE THIS IN PRODUCTION!
GITLAB_EXTERNAL_URL=http://localhost:5003
GITLAB_REGISTRY_EXTERNAL_URL=http://localhost:5005

# ArgoCD Configuration
# GitOps continuous delivery tool
ARGOCD_VERSION=v2.10.0
ARGOCD_SERVER_PORT=5010
ARGOCD_ADMIN_PASSWORD=ChangeMe123!  # CHANGE THIS IN PRODUCTION!
ARGOCD_SERVER_INSECURE=true  # Set to false for production with proper TLS

# Application Configuration
# Your application-specific settings
APP_BACKEND_PORT=8080
APP_FRONTEND_PORT=5006
APP_VERSION=1.0.0-SNAPSHOT

# Build Configuration
# How to tag container images
BUILD_TAG_STRATEGY=commit_sha  # Options: commit_sha, timestamp, semantic_version
