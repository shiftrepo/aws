# OpenSSL Configuration for Server Certificate Generation
# This configuration creates server certificates signed by the CA

[ req ]
default_bits       = 2048
distinguished_name = req_distinguished_name
req_extensions     = v3_req
prompt             = no
default_md         = sha256

[ req_distinguished_name ]
# Certificate Subject Information (will be overridden by script)
countryName            = JP
stateOrProvinceName    = Tokyo
localityName           = Tokyo
organizationName       = OnPremise-CA
organizationalUnitName = IT
commonName             = SERVER_NAME_PLACEHOLDER

[ v3_req ]
# Server Certificate Extensions
basicConstraints     = CA:FALSE
keyUsage             = critical,nonRepudiation,digitalSignature,keyEncipherment
extendedKeyUsage     = serverAuth,clientAuth
subjectAltName       = @alt_names

[ alt_names ]
# Subject Alternative Names (will be set by script)
# DNS.1 = SERVER_NAME_PLACEHOLDER
# IP.1  = IP_ADDRESS_PLACEHOLDER
