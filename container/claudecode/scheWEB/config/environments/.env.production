# Production Environment Configuration
NODE_ENV=production
APP_PORT=3000
LOG_LEVEL=info

# Database
DATABASE_PATH=/app/data/schedule.db
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Authentication (MUST CHANGE THESE VALUES)
BASIC_AUTH_ENABLED=true
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=CHANGE_ME_STRONG_PASSWORD
SESSION_SECRET=CHANGE_ME_TO_RANDOM_STRING_MIN_32_CHARS

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
CORS_ENABLED=false
CORS_ORIGIN=

# SSL/TLS
HTTPS_PORT=443
HTTP_PORT=80

# Backup (S3)
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BACKUP_SCHEDULE=0 2 * * *

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Resource Limits
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
MEMORY_LIMIT=512M

# Data Path
DATA_PATH=/app/data
