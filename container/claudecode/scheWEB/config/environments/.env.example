# Application Configuration
NODE_ENV=production
APP_PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_PATH=/app/data/schedule.db
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Authentication
BASIC_AUTH_ENABLED=true
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=changeme_strong_password_here
SESSION_SECRET=change_this_to_random_string_min_32_chars

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
CORS_ENABLED=false
CORS_ORIGIN=*

# SSL/TLS (for nginx)
HTTPS_PORT=443
HTTP_PORT=80

# Backup Configuration (S3 - Optional)
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BACKUP_SCHEDULE=0 2 * * *

# Monitoring (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# Resource Limits
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
MEMORY_LIMIT=512M

# Data Path (for volume mounting)
DATA_PATH=./data
