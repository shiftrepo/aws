{
  "name": "team-schedule-system",
  "version": "1.0.0",
  "description": "Team Schedule Management System with shift tracking and reporting",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config tests/unit/jest.config.js",
    "test:unit:watch": "jest --config tests/unit/jest.config.js --watch",
    "test:unit:coverage": "jest --config tests/unit/jest.config.js --coverage",
    "test:integration": "jest --config tests/integration/jest.config.js",
    "test:performance": "npm run test:performance:k6",
    "test:performance:k6": "k6 run tests/performance/k6-load-test.js",
    "test:performance:artillery": "artillery run tests/performance/artillery-config.yml",
    "db:migrate": "node devops/scripts/migrate.sh",
    "db:backup": "bash devops/scripts/backup.sh",
    "db:restore": "bash devops/scripts/restore.sh",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app"
  },
  "keywords": [
    "schedule",
    "team-management",
    "shift-tracking",
    "express",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1",
    "express-session": "^1.17.3",
    "bcrypt": "^5.1.1",
    "sanitize-html": "^2.11.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
