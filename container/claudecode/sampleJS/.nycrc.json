{
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "reporter": [
    "html",
    "lcov",
    "text",
    "text-summary",
    "cobertura"
  ],
  "include": [
    "modules/**/src/**/*.ts",
    "modules/**/src/**/*.tsx",
    "apps/**/src/**/*.ts",
    "apps/**/src/**/*.tsx"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/tests/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/*.config.ts",
    "**/*.config.js"
  ],
  "extension": [
    ".ts",
    ".tsx"
  ],
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80
}
